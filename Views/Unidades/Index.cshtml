@model IEnumerable<PruebaAdres.Modelo.Unidad>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Unidades Administrativas</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre de la unidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreUnidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UnidadId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.UnidadId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.UnidadId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
