@model PruebaAdres.Modelo.Adquisicione

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Adquisiciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Presupuesto" class="control-label"></label>
                <input asp-for="Presupuesto" class="form-control" />
                <span asp-validation-for="Presupuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadId" class="control-label">Unidad Administrativa</label>
                <select asp-for="UnidadId" class ="form-control" asp-items="ViewBag.UnidadId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoBienoServicioId" class="control-label"></label>
                <select asp-for="TipoBienoServicioId" class ="form-control" asp-items="ViewBag.TipoBienoServicioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnitario" class="control-label"></label>
                <input asp-for="ValorUnitario" class="form-control" />
                <span asp-validation-for="ValorUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaAdquisicion" class="control-label"></label>
                <input asp-for="FechaAdquisicion" class="form-control" />
                <span asp-validation-for="FechaAdquisicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProveedorId" class="control-label"></label>
                <select asp-for="ProveedorId" class ="form-control" asp-items="ViewBag.ProveedorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Documentacion" class="control-label"></label>
                <input asp-for="Documentacion" class="form-control" />
                <span asp-validation-for="Documentacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
